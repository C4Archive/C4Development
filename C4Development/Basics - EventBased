#import "CFACanvas.h"
@implementation CFACanvas

CFAString *message, *drawcount;

NSInteger drawCount = 0;

CGFloat y;

-(void)setup {
[self windowWidth:400 andHeight:320];
[self drawStyle:EVENTBASED];
[CFAString fill:1.0f];
[CFAShape strokeRed:1.0f green:0.2f blue:0.2f];
message = [[CFAString stringWithString:@"The EVENTBASED draw style makes a sketch run only when there is interaction \n\nThis message will be sent any time the mouse moves, or is pressed\n\nThis message will also be sent when a key is pressed"] retain];
y = self.centerPos.y;

}

-(void)draw {
[self background:0];
y++;
if(y > self.canvasHeight) y = 0;
[CFAShape lineFromX:0 Y:y toX:self.canvasWidth Y:y];

[message drawInRect:NSMakeRect(20, self.centerPos.y, 360, 94)];
drawcount = [CFAString stringWithFormat:@"drawCount = %d ",drawCount++];
[drawcount drawAtPoint:NSMakePoint(20, 146)];

}
@end