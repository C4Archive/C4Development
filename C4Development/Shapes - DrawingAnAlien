#import "CFACanvas.h"
@implementation CFACanvas
-(void)setup {
[self windowWidth:400 andHeight:320];
[self flipCoordinates];
[self background:0.75f];
[CFAShape rectMode:CENTER];
}
-(void)draw {
[CFAShape rectWithXPos:self.centerPos.x yPos:self.centerPos.y width:20 andHeight:100];
[CFAShape ellipseWithXPos:self.centerPos.x yPos:self.centerPos.x+30 width:60 andHeight:60];
[CFAShape ellipseWithXPos:self.centerPos.x-19 yPos:self.centerPos.x+30 width:16 andHeight:32];
[CFAShape ellipseWithXPos:self.centerPos.x+19 yPos:self.centerPos.x+30 width:16 andHeight:32];
[CFAShape lineFromX:self.centerPos.x-10 Y:self.centerPos.y-50 toX:self.centerPos.x-20 Y:self.centerPos.y-60];
[CFAShape lineFromX:self.centerPos.x+10 Y:self.centerPos.y-50 toX:self.centerPos.x+20 Y:self.centerPos.y-60];
}
@end